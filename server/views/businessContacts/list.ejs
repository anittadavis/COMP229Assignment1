<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Main content -->
<main class="container">
<br>
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h1><%= title %></h1>

            
            <a href="/businessContacts-list/add" class="btn btn-primary" role="button">
            <i class="fas fa-plus-circle"></i> Add a BusinessContact</a>
            
            <br>
            <table class="table table-bordered table-striped table-hover">
                <!-- Header Row-->
                <tr>
                    <th class="text-center">ContactName</th>
                    <th class="text-center">ContactNumber</th>
                    <th class="text-center">Email</th>
                   
                      <th class="text-center col-1"></th>
                      <th class="text-center col-1"></th>
                    
                </tr>

                <!--Repeatable Template Row-->

                 <% for(let count = 0; count < BusinessContactsList.length; count++) { %>
                     <tr>
                        <td class="text-center"><%= BusinessContactsList[count].ContactName %> </td>
                        <td class="text-center"><%= BusinessContactsList[count].ContactNumber %> </td>
                        <td class="text-center"><%= BusinessContactsList[count].Email %> </td>
                       
                        <td class="text-center col-1">
                            <a href="businessContacts-list/edit/<%= BusinessContactsList[count]._id %>" class="btn btn-primary btn-sm">
                            <i class="fas fa-pencil-alt"></i> Edit</a>
                        </td>
                        <td class="text-center col-1">
                            <a href="/businessContacts-list/delete/<%= BusinessContactsList[count]._id %>" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Delete</a>
                        </td>
                        
                    </tr>    
                <% } %>
            </table>
        </div>
    </div>


</main>



<%- include ../partials/bottom_nav.ejs %>


<%- include ../partials/footer.ejs %>



